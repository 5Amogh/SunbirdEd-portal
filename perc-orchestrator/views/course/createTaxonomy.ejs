<!DOCTYPE html>
<html lang="en" ng-app="studioApp">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SunBird</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/common.css" rel="stylesheet">
    <script src="/js/angular.min.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/controllers/taxonomyController.js"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body ng-controller="TaxonomyController">
	<% include ../includes/header %>

    <section>
        <div class="parent_container">
            <div class="col-md-12 main_container" style="padding-left: 30px; padding-right: 30px;">
                <div class="main">
                    <div class="">
                        <div class="row" style="padding-left: 30px">
                            <div class="btn-group" style="float:left; width: 45%">
                                <button type="button" class="btn btn-sm btn-default" ng-click="getTaxonomy('Course.json')">Course</button>
                                <button type="button" class="btn btn-sm btn-default" ng-click="getTaxonomy('Module.json')">Module</button>
                                <button type="button" class="btn btn-sm btn-default" ng-click="getTaxonomy('Lesson.json')">Lesson</button>
                                <button type="button" class="btn btn-sm btn-default" ng-click="getTaxonomy('LearningResource.json')">LearningResource</button>
                                <button type="button" class="btn btn-sm btn-default" ng-click="getTaxonomy('LearningActivity.json')">LearningActivity</button>
                                <button type="button" class="btn btn-sm btn-default" ng-click="getTaxonomy('Content.json')">Content</button>
                            </div>
                            <div class="form-inline"  style="float:left; width: 55%">
                                <div class="form-group">
                                    <label>Taxonomy Class&emsp;</label>
                                    <input type="text" class="form-control" ng-model="taxonomyClass">
                                </div>
                                <div class="form-group">
                                    <label>Taxonomy Name&emsp;</label>
                                    <input type="text" class="form-control" ng-model="taxonomyName">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn_green" ng-click="saveTaxonomy()">Save</button>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>Property Name</th>
                                    <th>Label</th>
                                    <th>LOM Category</th>
                                    <th>LOM Category Type</th>
                                    <th>Data Type</th>
                                    <th>Required?</th>
                                    <th>Max Length</th>
                                    <th>Occurence</th>
                                    <th>Range</th>
                                    <th>Editable?</th>
                                    <th>Enriched?</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="data in metadata">
                                    <td><input type="text" class="form-control" ng-model="data['propertyName']"></td>
                                    <td><input type="text" class="form-control" ng-model="data['label']"></td>
                                    <td><select ng-model="data['lobCategory']" ng-options="c for c in lomCategories" class="form-control"></select></td>
                                    <td><select ng-model="data['lobCategoryType']" ng-options="c for c in lomCategoryTypes" class="form-control"></select></td>
                                    <td><select ng-model="data['dataType']" ng-options="c for c in dataTypes" class="form-control"></select></td>
                                    <td><input type="checkbox" class="checkbox" ng-model="data['required']"></td>
                                    <td><input type="text" class="form-control" ng-model="data['maxLength']"></td>
                                    <td><input type="text" class="form-control" ng-model="data['occurence']"></td>
                                    <td><input type="text" class="form-control" ng-model="data['range']"></td>
                                    <td><input type="checkbox" ng-model="data['editable']"></td>
                                    <td><input type="checkbox" ng-model="data['enrichEnabled']"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="pull-right">
                                <div class="col-xs-3">
                                    <input type="text" class="form-control input-sm"  ng-model="addRowsSize">
                                </div>&nbsp;
                                <a class="btn btn-sm btn_green" ng-click="addRows()">Add Rows</a>
                            </div>
                        </div>
                    </div>
                    <!-- end yscroll -->
                </div>
            </div>
        </div>
    </section>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.file-input.js"></script>
    <script src="/js/custom.js"></script>
    <script>
    $(document).ready(function() {
        $('input[type=file]').bootstrapFileInput();
    });
    </script>
</body>

</html>
