<div class="modal fade" id="commonModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container">
                    <div class="col-md-5">
                        <h1>{{modalData.title}}</h1>
                        <span style="color: #999999;">{{modalData.enrollments}} Enrollments</span>
                        <p style="font-size: 18px;padding: 12px 0px 0px 0px;">{{modalData.description}}</p>
                    </div>
                    <div class="col-md-7">
                        <img ng-src="{{modalData.image}}"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
